	Escribir "Ingresar un número"
	Leer num
	Si num % 2 = 0 Entonces
		Si num == 0 Entonces
			Escribir "El número no es par ni impar"
		SiNo
			Escribir "El número es par"
		FinSi
	SiNo
		Escribir "El número es impar"
	Fin Si
	
